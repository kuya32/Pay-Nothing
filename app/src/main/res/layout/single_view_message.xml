<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/sellersMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sellers_message"
        android:padding="20dp"
        android:text="Message"
        android:textColor="@color/secondaryColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sellersProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_thing"
        app:layout_constraintEnd_toStartOf="@+id/sellersMessage"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toEndOf="@+id/sellersMessage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sellersMessageTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Seller's message time ago"
        android:textColor="@color/secondaryColor"
        android:textColorHint="@color/secondaryColor"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/sellersMessage"
        app:layout_constraintStart_toEndOf="@+id/sellersProfileImage" />

    <TextView
        android:id="@+id/usersMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/users_message"
        android:padding="20dp"
        android:text="Message"
        android:textColor="@color/primaryColor"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usersProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_thing"
        app:layout_constraintEnd_toStartOf="@+id/usersMessage"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toEndOf="@+id/usersMessage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usersMessageTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Users's message time ago"
        android:gravity="right"
        android:textColor="@color/primaryColor"
        android:textColorHint="@color/primaryColor"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/usersMessage"
        app:layout_constraintEnd_toStartOf="@+id/usersProfileImage" />


</androidx.constraintlayout.widget.ConstraintLayout>